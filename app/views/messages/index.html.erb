<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="form-horizontal" role="form">
  <%= form_for(@message) do |form| %>
  
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>
 
    <div class="form-group"> 
        <%= form.label :"名前：", :class => "col-sm-3 control-label" %>
        <div class="col-sm-7">
            <%= form.text_field :name, :class => "form-control" %>
        </div>
    </div>
  
    <div class="form-group"> 
        <%= form.label :"内容：", :class => "col-sm-3 control-label" %>
        <div class="col-sm-7">
            <%= form.text_area :body, :class => "form-control", :rows => 6 %>
        </div>
    </div>
  
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
            <%= form.submit "送信", :class => "btn btn-primary" %>
        </div>
    </div>
<% end %>
</div>